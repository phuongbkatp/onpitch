<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="56dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="@string/sign_in"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/title_sign_in_textsize"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_text_height"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/activity_margin_standard"
            android:layout_marginLeft="@dimen/activity_margin_standard"
            android:layout_marginTop="@dimen/activity_margin_standard"
            android:layout_weight="1"
            android:background="@drawable/text_input_bg"
            android:hint="@string/email"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:paddingLeft="@dimen/activity_margin_standard"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/input_pass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_text_height"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/activity_margin_standard"
            android:layout_marginLeft="@dimen/activity_margin_standard"
            android:layout_marginTop="@dimen/activity_margin_standard"
            android:layout_weight="1"
            android:background="@drawable/text_input_bg"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:maxLines="10"
            android:paddingLeft="@dimen/activity_margin_standard"
            android:textSize="16sp" />


        <Button
            android:id="@+id/btn_signup"
            android:layout_width="200dp"
            android:layout_height="@dimen/input_text_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_margin_standard"
            android:layout_marginLeft="@dimen/activity_margin_standard"
            android:layout_marginRight="@dimen/activity_margin_standard"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/rounded_rectangle"
            android:text="@string/sign_in"
            android:textColor="@color/globalWhite" />
    </LinearLayout>
</ScrollView>