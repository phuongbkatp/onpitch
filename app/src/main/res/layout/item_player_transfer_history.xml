<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="10dp"
    android:background="?android:attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_player_transfer_team_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        app:civ_border_color="@color/lightGray"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/tv_player_transfer_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:layout_toEndOf="@id/img_player_transfer_team_image"
        android:layout_toRightOf="@id/img_player_transfer_team_image"
        android:textColor="@color/text_color_common"
        android:textSize="@dimen/player_detail_txt_size" />

    <TextView
        android:id="@+id/tv_player_transfer_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/tv_player_transfer_team_name"
        android:layout_toRightOf="@id/tv_player_transfer_team_name"
        android:gravity="end|center_vertical"
        android:textColor="@color/player_value"
        android:textSize="@dimen/player_detail_txt_size_small" />

    <TextView
        android:id="@+id/tv_player_transfer_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/img_player_transfer_team_image"
        android:layout_toRightOf="@id/img_player_transfer_team_image"
        android:gravity="center"
        android:textColor="@color/color_subtext"
        android:textSize="@dimen/player_detail_txt_size_small" />

    <TextView
        android:id="@+id/tv_player_transfer_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/tv_player_transfer_time"
        android:layout_toRightOf="@id/tv_player_transfer_time"
        android:gravity="end"
        android:textColor="@color/player_value"
        android:textSize="@dimen/player_detail_txt_size_small" />

</RelativeLayout>