<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_team_logo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="@dimen/team_performance_margin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_margin_standard"/>

    <TextView
        android:id="@+id/tv_win_flag"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/img_team_logo"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/globalWhite"
        android:textSize="12sp" />
</RelativeLayout>