<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_select_team"
        android:gravity="center_horizontal"
        android:textColor="@color/globalWhite"
        android:textAlignment="center"
        android:textSize="@dimen/welcome_text"
        android:layout_above="@id/follow_league_list"/>

    <ListView
        android:id="@+id/follow_league_list"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_above="@+id/view_one"
        android:layout_marginBottom="30dp"
        android:background="@color/globalWhite">

    </ListView>

    <View
        android:id="@+id/view_one"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>