<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/match_detail_lineups_list_item_padding"
    android:paddingTop="@dimen/match_detail_lineups_list_item_padding">

    <LinearLayout
        android:id="@+id/view_home_team"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_match_detail_lineups_home_player"
            android:layout_width="@dimen/match_detail_lineups_player_image_size"
            android:layout_height="@dimen/match_detail_lineups_player_image_size"
            android:layout_marginEnd="@dimen/match_detail_lineups_gap"
            android:layout_marginRight="@dimen/match_detail_lineups_gap"
            app:civ_border_color="@color/globalWhite"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/tv_match_detail_lineups_home_team_player_number"
            android:layout_width="@dimen/match_detail_lineups_player_number_width"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/match_detail_lineups_gap"
            android:layout_marginRight="@dimen/match_detail_lineups_gap"
            android:gravity="start" />

        <TextView
            android:id="@+id/tv_match_detail_lineups_home_team_player_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_away_team"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="end">

        <TextView
            android:id="@+id/tv_match_detail_lineups_away_team_player_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end" />

        <TextView
            android:id="@+id/tv_match_detail_lineups_away_team_player_number"
            android:layout_width="@dimen/match_detail_lineups_player_number_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/match_detail_lineups_gap"
            android:layout_marginStart="@dimen/match_detail_lineups_gap"
            android:gravity="end" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_match_detail_lineups_away_player"
            android:layout_width="@dimen/match_detail_lineups_player_image_size"
            android:layout_height="@dimen/match_detail_lineups_player_image_size"
            android:layout_marginLeft="@dimen/match_detail_lineups_gap"
            android:layout_marginStart="@dimen/match_detail_lineups_gap"
            app:civ_border_color="@color/globalWhite"
            app:civ_border_width="2dp" />
    </LinearLayout>
</LinearLayout>